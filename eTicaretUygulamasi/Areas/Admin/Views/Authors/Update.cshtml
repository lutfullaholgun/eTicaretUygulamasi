@model Author

@{
    ViewData["Title"] = "Update Author";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 rounded mt-4">
                <div class="card-header bg-warning text-white py-3">
                    <h4 class="mb-0 text-center">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Img" /> @* eski dosyayı tutalım. yoksa server'a gönderirken eski img silinebilir *@
                        <div class="row g-3">
                            <!-- Satır 1 -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="LastName" class="form-label"></label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                    <label asp-for="Description" class="form-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="OrderNo" class="form-control" placeholder="Order No" />
                                    <label asp-for="OrderNo" class="form-label"></label>
                                    <span asp-validation-for="OrderNo" class="text-danger small"></span>
                                </div>
                            </div>
                            <!-- Satır 4 -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Img" class="form-label"></label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                    <span asp-validation-for="Img" class="text-danger small"></span>
                                    @if (Model.Img != null && !string.IsNullOrWhiteSpace(Model.Img))
                                    {
                                        <img src="/Images/@Model.Img" width="65" />
                                        <label class="form-check-label">
                                            @Html.CheckBox("DeleteImg") Delete Image
                                        </label>
                                    }
                                </div>
                            </div>

                            <!-- Satır 5 -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CreatedDate" class="form-control" placeholder="Created Date" disabled />
                                    <label asp-for="CreatedDate" class="form-label"></label>
                                    <span asp-validation-for="CreatedDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Checkbox'lar -->
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="row mt-4">
                            <div class="col-12 d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>