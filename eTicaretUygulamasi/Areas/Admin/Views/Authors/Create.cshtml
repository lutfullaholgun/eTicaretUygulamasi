@model Author

@{
    ViewData["Title"] = "Create Author";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 rounded mt-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">Create New Author</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">@*  bu özellik formdan seçilen dosyaların sunucuya gönderilmesini sağlar. Bu asp.net'in bir özelliği değildir. Bu HTML in bir özelliğidir.*@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <!-- Her satırda iki input -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="LastName" class="form-label"></label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                    <label asp-for="Description" class="form-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="OrderNo" class="form-control" placeholder="Order No" />
                                    <label asp-for="OrderNo" class="form-label"></label>
                                    <span asp-validation-for="OrderNo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Dosya Yükleme -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Img" class="form-label"></label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                    <span asp-validation-for="Img" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Checkbox'lar yan yana -->
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="row mt-4">
                            <div class="col-12 d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-user-plus me-2"></i>Create Author
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
